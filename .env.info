# Info Mode Environment  
# For production-ready deployment with minimal logging

# Bot Mode
BOT_MODE=info

# Logging
DEBUG_LEVEL=info

# Discord Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here

# Analysis Channels (REQUIRED)
ANALYSIS_CHANNEL_1_ID=your_analysis_channel_1_id
ANALYSIS_CHANNEL_2_ID=your_analysis_channel_2_id

# General Notices Channel (REQUIRED)
GENERAL_NOTICES_CHANNEL_ID=your_general_channel_id

# Message Retention
RETENTION_HOURS=168

# Health Check Server Port
PORT=10000

# Database Configuration (OPTIONAL - will fall back to memory if not provided)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Admin's Discord ID for database user creation
ADMIN_DISCORD_ID=your_admin_discord_id

# Info mode settings (minimal logging, optimized performance)
ENABLE_DETAILED_LOGGING=false
ENABLE_PERFORMANCE_METRICS=false