{
  "name": "tradersmind-discord-scanner",
  "version": "1.0.0",
  "description": "Discord bot that scans channels for stock symbols and links to analysis data",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "start:development": "npx cross-env NODE_ENV=development node dist/bot.js",
    "start:production": "npx cross-env NODE_ENV=production node dist/bot.js",
    "start:prod": "npx cross-env NODE_ENV=production node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "dev:development": "npx cross-env NODE_ENV=development ts-node src/bot.ts",
    "dev:production": "npx cross-env NODE_ENV=production ts-node src/bot.ts",
    "dev:prod": "npx cross-env NODE_ENV=production ts-node src/bot.ts",
    "test": "playwright test",
    "test:shutdown": "playwright test bot-shutdown-cleanup.spec.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "keywords": [
    "discord",
    "bot",
    "stock",
    "trading",
    "analysis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
