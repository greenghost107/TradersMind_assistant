# Production Mode Environment
# For optimized production deployment with monitoring

# Bot Mode
BOT_MODE=production

# Node Environment
NODE_ENV=production

# Logging
DEBUG_LEVEL=info

# Discord Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here

# Analysis Channels (REQUIRED)
ANALYSIS_CHANNEL_1_ID=your_analysis_channel_1_id
ANALYSIS_CHANNEL_2_ID=your_analysis_channel_2_id

# General Notices Channel (REQUIRED)
GENERAL_NOTICES_CHANNEL_ID=your_general_channel_id

# Message Retention
RETENTION_HOURS=168

# Health Check Server Port (Render sets this automatically)
PORT=10000

# Database Configuration (REQUIRED for production)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Admin's Discord ID for database user creation (REQUIRED)
ADMIN_DISCORD_ID=your_admin_discord_id

# Production-specific settings
ENABLE_PERFORMANCE_METRICS=true
ENABLE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_UPTIME_MONITORING=true

# Security settings
ENABLE_SECURITY_HEADERS=true
HIDE_INTERNAL_ERRORS=true
SANITIZE_ERROR_MESSAGES=true