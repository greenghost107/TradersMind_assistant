# Bot Mode Configuration
# Choose one: info, debug, local, production
BOT_MODE=local

# Logging Level
# Choose one: silent, error, warn, info, debug
DEBUG_LEVEL=debug

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Analysis Channels (comma separated)
ANALYSIS_CHANNEL_1_ID=channel_id_1
ANALYSIS_CHANNEL_2_ID=channel_id_2

# General Notices Channel
GENERAL_NOTICES_CHANNEL_ID=general_channel_id

# Message Retention (hours)
RETENTION_HOURS=168

# Health Check Server Port (required for Render)
PORT=10000

# Database Configuration
# Note: PostgreSQL not needed in local mode - uses SQLite via LOCAL_DB_PATH

# Admin's Discord ID (for database user creation)
ADMIN_DISCORD_ID=admin_discord_user_id

# Local Mode Specific (only used when BOT_MODE=local)
LOCAL_DB_PATH=./local_bot.db
LOCAL_PORT=3000
SKIP_DISCORD=false

# Mode-Specific Features
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_MOCK_DATA=false